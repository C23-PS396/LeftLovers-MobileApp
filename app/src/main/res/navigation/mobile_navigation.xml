<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.LeftLoversApp.view.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.LeftLoversApp.view.history.HistoryFragment"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.LeftLoversApp.view.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_leaderboard"
        android:name="com.example.LeftLoversApp.view.leaderboard.LeaderboardFragment"
        tools:layout="@layout/fragment_leaderboard" />

    <fragment

        android:id="@+id/navigation_confirmPayment"
        android:name="com.example.LeftLoversApp.view.confirmPayment.confirmPayment"
        android:label="@string/Leaderboard"
        tools:layout="@layout/fragment_confirm_payment" />

        android:id="@+id/navigation_search"
        android:name="com.example.LeftLoversApp.view.search.SearchFragment"
        tools:layout="@layout/fragment_search" />

</navigation>